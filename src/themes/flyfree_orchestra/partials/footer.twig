<footer class="site-footer">
    <div class="container">
        {{ mailchimp_title | prepend('<div class="site-footer__heading">') | append('</div>') }}
        {{ mailchimp_content | prepend('<p>') | append('</p>') }}
        
        <form action="//flyfreemovement.us12.list-manage.com/subscribe/post?u=b6948f032db184ef12e04ed80&amp;id=2326dffeeb" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate form site-footer__form" target="_blank" novalidate="novalidate">
            <ul class="form__list">
                <li class="form__item">
                    <label for="mce-FNAME">First Name</label>
                    <input type="text" value="" name="FNAME" class="valid" id="mce-FNAME" placeholder="First Name" aria-invalid="false">
                </li>
                <li class="form__item">
                    <label for="mce-LNAME">Last Name</label>
                    <input type="text" value="" name="LNAME" class="" id="mce-LNAME" placeholder="Last Name">
                </li>
                <li class="form__item">
                    <label for="mce-EMAIL">Email Address</label>
                    <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Email Address" aria-required="true">
                </li class="form__item">
            </ul>
            <footer class="form__footer">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div> 
                <div style="position: absolute; left: -999em;" aria-hidden="true">
                    <input type="text" name="b_b6948f032db184ef12e04ed80_2326dffeeb" tabindex="-1" value="">
                </div>
                <input type="submit" value="Join Today!" name="subscribe" id="mc-embedded-subscribe" class="button">
            </footer>
        </form>
    </div><!-- /.container -->
</footer><!-- /.site-footer -->
