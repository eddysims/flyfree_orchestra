<nav class="navigation" role="navigation">
    <div class="navigation__container container">

        {% include "partials/_logo.twig" with { is_clickable: true } %}

        <span class="navigation__hamburger hamburger">
            <i class="hamburger__arrow"></i>
        </span><!-- /.hamburger -->

        <ul class="navigation__list">
            <li class="navigation__item navigation__item--logo">
                {% include "partials/_logo.twig" with { is_clickable: true } %}
            </li>
            {% for item in main_menu.items %}
                <li class="navigation__item">
                    <a href="{{ item.url }}" class="navigation__link {{ item.class }}">
                        {{ item.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>

        <div class="navigation__cta">
            <a href="{{ site.url }}/classes" class="button">Classes</a>
        </div>

    </div><!-- /.container -->
</nav><!-- /.navigation -->
